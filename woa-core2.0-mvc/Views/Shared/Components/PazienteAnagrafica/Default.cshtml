@model Woa.Models.Paziente
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Anagrafica Paziente</h4>
    </div>
    <div class="panel-body">
<div id="pazienteDetails"></div>
<script> 
    $(document).ready(
        $.get('@Url.Action("DetailsPartial", "Pazienti")', {id : @Model.ID}, function(content){
                $("#pazienteDetails").html(content);
            })
    );
</script>
	</div> 
    <div class="panel-footer">
        <div>
            <a asp-controller="Pazienti" asp-action="Edit" asp-route-id="@Model.ID">Edit</a> | 
            <a asp-controller="Pazienti" asp-action="Delete" asp-route-id="@Model.ID">Delete</a> |
            <a asp-controller="Pazienti" asp-action="Index">Back to List</a>
        </div>
    </div>      
</div>		
