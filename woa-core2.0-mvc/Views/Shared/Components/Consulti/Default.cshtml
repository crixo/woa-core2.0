@model IEnumerable<Woa.Models.Consulto>

@{
    
}

<h4>Consulti</h4>
<hr />
<p>
    <a asp-controller="Consulti" asp-action="Create" asp-route-pazienteId="@ViewBag.PazienteId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <span>Data</span>
            </th>
            <th>
                <span>Problema Iniziale</span>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.ProblemaIniziale)
                </td>
                <td>
                    <a asp-controller="Consulti" asp-action="Details" asp-route-id="@item.ID">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>

