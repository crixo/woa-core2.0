@model IEnumerable<Woa.Models.Esame>
<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Esami</h4>
    </div>
    <div class="panel-body">
        <div condition="!@Model.Any()">
        	Nessun esame per questo consulto
        </div>
        <div condition="@Model.Any()">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <span>Data</span>
                        </th>
            		    <th>
                            <span>Tipo</span>
                        </th>	
                        <th>
                            <span>Descrizione</span>
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.Data)
                            </td>
                            <td>
                                @Html.DisplayFor(model => item.Tipo.Descrizione)
                            </td>			
                            <td>
                                @Html.DisplayFor(model => item.Descrizione)
                            </td>
                            <td>
                                <a asp-controller="Esami" asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
	</div>
    <div class="panel-footer">
        <div>
            <a asp-controller="Esami" 
                asp-action="Create" 
                asp-route-consultoId="@ViewBag.ConsultoId">Create New</a>
        </div>      
    </div>   	
</div>
