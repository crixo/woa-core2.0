@model Woa.Models.Paziente

@{
    ViewData["Title"] = "Details";
}



<h2>Details</h2>

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
<div id="pazienteDetails"></div>
<script> 
    $(document).ready(
        $.get('@Url.Action("DetailsPartial", "Pazienti")', {id : @Model.ID}, function(content){
                $("#pazienteDetails").html(content);
            })
	);
</script>
                </div>
                <div class="col-md-4">
                    @await Component.InvokeAsync("AnamnesiRemote", new { pazienteId = Model.ID })
                </div>
                <div class="col-md-4">
                    @await Component.InvokeAsync("Consulti", new { pazienteId = Model.ID })		
                </div>
            </div>
        </div>



