@model Woa.Models.Esame

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit</h3>

<form asp-action="Edit">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="Data" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TipoId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TipoId" class ="form-control" asp-items="ViewBag.TipiEsami">
                    <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="TipoId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Descrizione" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Descrizione" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Descrizione" class="text-danger"></span>
            </div>
        </div>       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-controller="Consulti" asp-action="Details" asp-route-id="@Model.ConsultoId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
