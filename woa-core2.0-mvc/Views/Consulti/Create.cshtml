@model Woa.Models.Consulto

@{
    ViewData["Title"] = "Create";
}

@section Paziente {
    @await Component.InvokeAsync("PazienteHeader", new { pazienteId = Model.PazienteId })
}

<h3>Consulto</h3>

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PazienteId" />
        <div class="form-group">
            <label asp-for="Data" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Data" class="form-control date" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProblemaIniziale" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="ProblemaIniziale" rows="5" class="form-control"></textarea>
                <span asp-validation-for="ProblemaIniziale" class="text-danger"></span>
            </div>
        </div>			
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
