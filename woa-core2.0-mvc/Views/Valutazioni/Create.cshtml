@model Woa.Models.Valutazione

@{
    ViewData["Title"] = "Create";
}

@section Paziente {
    @await Component.InvokeAsync("PazienteHeader", new { pazienteId = Model.PazienteId })
}

@section Consulto {
    @await Component.InvokeAsync("ConsultoHeader", new { consultoId = Model.ConsultoId })
}

<h3>Valutazione</h3>

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PazienteId" />
        <input type="hidden" asp-for="ConsultoId" />
        <div class="form-group">
            <label asp-for="Strutturale" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Strutturale" class="form-control" />
                <span asp-validation-for="Strutturale" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CranioSacrale" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CranioSacrale" class="form-control" />
                <span asp-validation-for="CranioSacrale" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AkOrtodontica" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AkOrtodontica" class="form-control" />
                <span asp-validation-for="AkOrtodontica" class="text-danger"></span>
            </div>
        </div>		
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
